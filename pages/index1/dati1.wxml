<!--pages/index1/dati1.wxml-->
<view class='xzt'>
  <image class='back' src='{{imgServer}}/img/top/beij.png'></image>
  <image class='leave' src='{{imgServer}}/img/top/fanhui.png'></image>
  <view class='chengji'>我的成绩</view>
  <view class='fenshu'>{{currentScore}}</view>
  <image class='mb' src='{{imgServer}}/img/top/maobi.png'></image>
  <image class='tixu' src='{{questionNoSrc}}'></image>
  <view class='time'></view>
  <view class='time2'></view>

  <image class='tiban' src='{{imgServer}}/img/top/tiban.png'></image>

  <view class='question'>{{question}}</view>

  <image class='zhedang' src='{{imgServer}}/img/top/zb.png'></image>
  <image class='A' src='{{imgServer}}/img/xztimg/xzt.png'></image>
  <image class='A' src='{{imgServer}}/img/xztimg/xzt.png'></image>
  <image class='A' src='{{imgServer}}/img/xztimg/xzt.png'></image>
  <view>
    <image src='{{imgServer}}/img/xztimg/A.png' class='answerA'></image>
    <image src='{{imgServer}}/img/xztimg/B.png' class='answerB'></image>
    <image src='{{imgServer}}/img/xztimg/C.png' class='answerC'></image>
    <view class='answerfonta' bindtap='select' data-selectd='A'>{{choiceA}}</view>
    <view class='answerfontb' bindtap='select' data-selectd='B'>{{choiceB}}</view>
    <view class='answerfontc' bindtap='select' data-selectd='C'>{{choiceC}}</view>
  </view>

  <view class='black' style='{{displayBlock}}'></view>
  <view class='alert' style='{{displayAlert}}'>
    <image class='yes' style='{{displayYes}}' src='{{imgServer}}/img/alert/yes.png'></image>
    <image class='no' style='{{displayNo}}' src='{{imgServer}}/img/alert/no.png'></image>
    <image class='yespic' style='{{displayYespic}}' src='{{imgServer}}/img/alert/xiao.png'></image>
    <image class='nopic' style='{{displaynopic}}' src='{{imgServer}}/img/alert/ku.png'></image>
    <view class='correct_answer'>正确答案是：</view>
    <view class='continueBtn' style='{{displayContinueBtn}}' bindtap='go'>继续挑战</view>

  </view>
</view>
